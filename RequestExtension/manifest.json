{  "manifest_version"  : 2
,  "name"              : "NoXSS"
,  "description"       : "偵測到危險的網站後自動登出"
,  "version"           : "1.0"
,  "browser_action"    : 
    {   "default_icon"      : "icon.png",
        "default_popup"     : "popup.html"
    }
,  "permissions"       : 
    [   "webRequest"
    ,   "webRequestBlocking"
    ,   "<all_urls>"
    ,   "tabs"
    ,   "storage"
    ,   "cookies"
    ]
,  "background"         : 
    {   "scripts"           :   [   "jquery.min.js",
                                    "background.js"
                                ]
    ,   "persistent"        : true
    }
,   "content_scripts"   :  
    [
        {   "matches": ["<all_urls>"],
            "js": ["inject.js"]
        }
    ]
}