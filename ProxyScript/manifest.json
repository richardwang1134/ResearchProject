{  "manifest_version"  : 2
,  "name"              : "WebDefender"
,  "description"       : "避免使用者受到特定攻擊手法影響"
,  "version"           : "5.5"
,  "browser_action"    : 
    {   "default_icon"      : "icon.png",
        "default_popup"     : "popup.html"
    }
,  "permissions"       : 
    [   "webRequest"
    ,   "webRequestBlocking"
    ,   "<all_urls>"
    ,   "tabs"
    ,   "storage"
    ,   "cookies"
    ]
,  "background"         : 
    {   "scripts"           :   [   "js/jquery.js",
                                    "background.js"
                                ]
    ,   "persistent"        : true
    }
}